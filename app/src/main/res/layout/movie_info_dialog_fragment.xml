<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent">


            <!--            <ImageView-->
            <!--                android:id="@+id/imageViewCloseInfoMovie"-->
            <!--                android:layout_width="30dp"-->
            <!--                android:layout_height="30dp"-->
            <!--                android:layout_marginTop="18dp"-->
            <!--                android:layout_marginRight="18dp"-->
            <!--                android:src="@drawable/ic_close_dialog_fragment"-->
            <!--                app:layout_constraintEnd_toEndOf="parent"-->
            <!--                app:layout_constraintTop_toTopOf="parent" />-->


            <ImageView
                android:id="@+id/imageViewInfoMovie"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_upcoming" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccentTransparent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvInfoTitleMovie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccentTransparent"
                android:gravity="start|top"
                android:paddingTop="40dp"
                android:paddingLeft="10dp"
                android:text="Title"
                android:textColor="@color/white"
                android:textSize="@dimen/info_movie_text_title_dialog_fragment"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textViewInfoMovie"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorAccentTransparent"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:paddingTop="20dp"
                android:paddingLeft="10dp"
                android:scrollbars="vertical"
                android:text="Info"
                android:textColor="@color/white"
                android:textSize="@dimen/info_movie_text_dialog_fragment"
                android:textStyle="bold" />
        </LinearLayout>


    </FrameLayout>



</androidx.constraintlayout.widget.ConstraintLayout>